@using _18_E_LEARN.DataAccess.Data.Models.Categories;
@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
@model List<Category>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Categories table</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <h6 class="mb-0 text-sm">@category.Id</h6>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@category.Name</p>
                                        </td>
                                        
                                        @*if*@
                                        <td class="align-middle">
                                            <a class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user" asp-controller="Admin" asp-action="EditCategory" asp-route-id="@category.Id">
                                                Edit
                                            </a>
                                            <a class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user" asp-controller="Admin" asp-action="EditCategory" asp-route-id="@category.Id">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="">
                    <a class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user" asp-controller="Admin" asp-action="AddCategory">
                        Add
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
